{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "lib": ["dom", "es2020"],
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src"]
}
