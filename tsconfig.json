{
  "compilerOptions": {
    "outDir": "./build/src/",
    "noImplicitAny": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "lib": [ "es6", "dom", "esnext.asynciterable", "es2016"  ],
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declarationDir": "./build/dist",
    "esModuleInterop": true
  },
  "include": [ "src/*", "src/**/*", "src/**/**/*", "src/**/**/**/*" ],
  "exclude": [
    "node_modules",
    "src/examples"
  ]
}
