{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": [ "dom", "es2020"  ],
    "rootDir": "src",
    "outDir": "lib/commonjs",
    "skipLibCheck": true
  },
  "include": [ "src" ]
}
